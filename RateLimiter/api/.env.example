# Environment Configuration for RateLimiter PHP API
# Copy this file to .env and update values for your environment

# Application Settings
DEBUG_MODE=true
TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_NAME=ratelimiter_api
DB_USER=api_user
DB_PASS=secure_password
DB_CHARSET=utf8mb4

# Redis Configuration (for rate limiting storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=3600
JWT_ISSUER=ratelimiter-api
JWT_ALGORITHM=HS256

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis
DEFAULT_RATE_LIMIT=100
DEFAULT_WINDOW=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key,X-Requested-With

# Security Settings
API_KEY_LENGTH=32
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=7200

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/api.log
LOG_MAX_SIZE=10485760
LOG_ROTATION=daily

# Cache Configuration
CACHE_DRIVER=redis
CACHE_TTL=3600
CACHE_PREFIX=ratelimiter_

# Email Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="RateLimiter API"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads/

# API Rate Limiting Tiers
BASIC_TIER_HOURLY=100
BASIC_TIER_MINUTE=10
BASIC_TIER_BURST=5

PREMIUM_TIER_HOURLY=1000
PREMIUM_TIER_MINUTE=50
PREMIUM_TIER_BURST=20

ENTERPRISE_TIER_HOURLY=10000
ENTERPRISE_TIER_MINUTE=200
ENTERPRISE_TIER_BURST=100

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# External Services
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30

# Development Settings
MOCK_EXTERNAL_APIS=false
ENABLE_QUERY_LOGGING=false
ENABLE_PROFILING=false